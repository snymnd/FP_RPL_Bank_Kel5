<%- include('layouts/header') %>
    <%- include('layouts/nav') %>

<!-- component -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div class="relative min-h-screen flex items-center justify-center bg-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 bg-gray-500 bg-no-repeat bg-cover"
    style="background-image: url('/static/img/dubu-bg.jpg');">
    <div class="max-w-2xl w-full space-y-8 p-10 bg-white rounded-xl shadow-lg z-10">
        <div class="grid  gap-8 grid-cols-1">


            <form class="flex flex-col " method="post" action="/user/add" id="regForm">
                <div class="flex flex-col sm:flex-row items-center">
                    <h2 class="font-semibold text-lg mr-auto">Restration Form</h2>
                    <div class="w-full sm:w-auto sm:ml-auto mt-3 sm:mt-0"></div>
                </div>
                <div class="mt-5">
                    <div class="form">
                        <div class="md:flex flex-row md:space-x-4 w-full text-xs">
                            <div class="mb-3 space-y-2 w-full text-xs">
                                <label for="name"  class="font-semibold text-gray-600 py-2">Full Name<abbr
                                        title="required" >*</abbr></label>
                                <input placeholder="Full Name"
                                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded-lg h-10 px-4"
                                    required type="text" name="name"
                                    id="name">
                            </div>
                            <div class="mb-3 space-y-2 w-full text-xs">
                                <label for="email" class="font-semibold text-gray-600 py-2">Email<abbr
                                        title="required">*</abbr></label>
                                <input placeholder="example@mail.com" 
                                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-gray-500 rounded-lg h-10 px-4
                                    invalid:text-pink-700"
                                    required type="email" name="email" id="email" >
                            </div>
                        </div>
                        <div class="md:flex md:flex-row md:space-x-4 w-full text-xs">
                            <div class="w-full flex flex-col mb-3">
                                <label for="NIK" class="font-semibold text-gray-600 py-2">NIK</label>
                                <input placeholder="123467898" 
                                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded-lg h-10 px-4"
                                    type="text" inputmode="numeric" oninput="this.value = this.value.replace(/\D+/g, '')" name="NIK" id="NIK" required>
                            </div>
                            <div class="w-full flex flex-col mb-3">
                                <label for="noTelp" class="font-semibold text-gray-600 py-2">Nomor Telepon<abbr
                                        title="required">*</abbr></label>
                                <input placeholder="08123456789"
                                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded-lg h-10 px-4"
                                    type="tel" inputmode="numeric" oninput="this.value = this.value.replace(/\D+/g, '')" name="noTelp" id="noTelp" required>
                            </div>
                        </div>
                        <div class="mb-3 space-y-2 w-full text-xs">
                            <label for="alamat"  class=" font-semibold text-gray-600 py-2">Alamat</label>
                            <div class="flex flex-wrap w-full mb-4 relative">
                                <input type="text" name="alamat" id="alamat"
                                    class="flex-shrink flex-grow flex-auto leading-normal w-px flex-1 border h-10 border-grey-light rounded-lg px-3 relative focus:border-blue focus:shadow">
                            </div>
                        </div>
                        <div class="mb-3 space-y-2 w-full text-xs">
                            <label class=" font-semibold text-gray-600 py-2">Saldo Awal</label>
                            <div class="flex flex-wrap w-full mb-4 relative">
                                <input type="number" required name="saldo" id="saldo"
                                    class="flex-shrink flex-grow flex-auto leading-normal w-px flex-1 border h-10 border-grey-light rounded-lg px-3 relative focus:border-blue focus:shadow">
                            </div>
                        </div>
                        
                        <div class="md:flex md:flex-row md:space-x-4 w-full text-xs">
                            <div class="w-full flex flex-col mb-3">
                                <label for="password" class="font-semibold text-gray-600 py-2">password</label>
                                <input placeholder="6 minimal character"
                                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded-lg h-10 px-4"
                                    type="password" name="password" id="password" required>
                            </div>
                            <div class="w-full flex flex-col mb-3">
                                <label for="pinATM" class="font-semibold text-gray-600 py-2">Pin Transaksi<abbr
                                        title="required">*</abbr></label>
                                <input placeholder="6 minimal number"
                                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded-lg h-10 px-4"
                                    type="text" inputmode="numeric" oninput="this.value = this.value.replace(/\D+/g, '')" id="pinATM" required>
                            </div>
                        </div>
                        <div class="md:flex md:flex-row md:space-x-4 w-full text-xs">
                            <div class="w-full flex flex-col mb-3">
                                <label for="password" class="font-semibold text-gray-600 py-2">Konfirmasi Password</label>
                                <input placeholder="6 minimal character"
                                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded-lg h-10 px-4"
                                    type="password" name="crmfPassword" id="crmfPassword" required>
                            </div>

                        </div>
                        <div class="registrationFormAlert" style="color:green;" id="CheckPasswordMatch"></div>
                        <div class="mt-5 text-right md:space-x-3 md:block flex flex-col-reverse">
                            <button
                                class="mb-2 md:mb-0 bg-white px-5 py-2 text-sm shadow-sm font-medium tracking-wider border text-gray-600 rounded-full hover:shadow-lg hover:bg-gray-100">
                                Cancel </button>
                            <button type="submit" disabled
                                class="mb-2 md:mb-0 bg-green-400 px-5 py-2 text-sm shadow-sm font-medium tracking-wider text-white rounded-full hover:shadow-lg hover:bg-green-500
                                disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none
                                ">Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
        function checkPasswordMatch() {
                var password = $("#password").val();
                var confirmPassword = $("#crmfPassword").val();

                    if ( password != confirmPassword){
                        $("#CheckPasswordMatch").html("Passwords does not match!");
                        $("#CheckPasswordMatch").css("color", "red");
                        $(':button[type="submit"]').prop('disabled', true);
                    }
                    else{
                        $("#CheckPasswordMatch").html("Passwords match.");
                        $("#CheckPasswordMatch").css("color","green");
                         $(':button[type="submit"]').prop('disabled', false);
                    }

        }
        $(document).ready(function () {
            $("#password").keyup(checkPasswordMatch);
        });
</script>
<%- include('layouts/footer') %>
